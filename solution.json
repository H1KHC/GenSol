[
	{
		"type":"config",
		"includeDir":[
			"include"
		],
		"srcDir":"src",
		"distDir":"bin/"
	}, {
		"type":"compiler",
		"executableName":"g++",
		"outputFlag":"-c -o",
		"compileFlag":[
			"-std=c++11"
		]
	}, {
		"type":"compiler",
		"name":"debug",
		"compileFlag":[
			"-g",
			"-D_DEBUG"
		]
	}, {
		"type":"compiler",
		"name":"release",
		"compileFlag":[
			"-O2"
		]
	}, {
		"type":"linker",
		"executableName":"g++",
		"outputFlag":"-o",
		"linkFlag":[
			"-std=c++11",
			"-static-libgcc"
		],
		"switcher":{
			"expression":"uname | sed \"s/[_0-9].*//\"",
			"case": [
				{
					"name":"mingw",
					"linkFlag": [
						"-lboost_program_options-mt",
						"-lboost_system-mt",
						"-lboost_filesystem-mt"
					]
				}, {
					"default":true,
					"linkFlag": [
						"-lboost_program_options",
						"-lboost_system",
						"-lboost_filesystem"
					]
				}
			]
		}
	}, {
		"type":"linker",
		"name":"debug",
		"compileFlag":"-g"
	}, {
		"type":"linker",
		"name":"release",
		"compileFlag":"-O2"
	}, {
		"type":"target",
		"name":"gensol",
		"srcR": ".*\\.cpp",
		"compiler":"release",
		"linker":"release"
	}, {
		"type":"target",
		"name":"gensold",
		"srcR": ".*\\.cpp",
		"compiler":"debug",
		"linker":"debug"
	}, {
		"type":"task",
		"default":true,
		"name":"release",
		"target":"gensol"
	}, {
		"type":"task",
		"name":"debug",
		"target":"gensold"
	}
]
